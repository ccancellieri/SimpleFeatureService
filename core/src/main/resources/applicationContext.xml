    <bean id="sfs-placeholderConfig" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer" >
        <property name="locations">
            <list>
            	<value>classpath:internal-sfs-datasource.properties</value>
                <value>classpath:sfs-datasource.properties</value>
            </list>
        </property>
        
        <property name="ignoreResourceNotFound" value="true" />
        <property name="systemPropertiesModeName" value="SYSTEM_PROPERTIES_MODE_OVERRIDE"/>
    </bean>
    
    <bean id="JoinFeatureFactory" class="it.geosolutions.sfs.data.join.JoinFeatureFactorySPI" >
        <constructor-arg index="0" value="${PGisFeatureFactory.priority}" />
        <constructor-arg index="1" type="java.io.File" value="${PGisFeatureFactory.datastore.properties}" />
        <constructor-arg index="2" type="java.io.File" value="${DWFeatureFactory.datastore.properties}" />
    </bean>
    
